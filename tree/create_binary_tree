#include <iostream>

using namespace std;

class Node{
    public:
    int value;
    Node * left;
    Node * right;
    Node(int val){
        value = val;
        left = NULL;
        right = NULL;
    }
};

class FullBinaryTree{
    public:
     Node * root;
     FullBinaryTree(){
         root = NULL;
     } 
     void insert(int value){
         Node * new_node = new Node(value);
         if(!root){
             root = new_node;
         }else{
             Node * current_node = root;
             while(true){
                 if(!current_node->left){
                     current_node->left = new_node;
                     break;
                 }else if(!current_node->right){
                     current_node->right = new_node;
                 }else{
                     current_node = current_node->left;
                 }
             }
         }
     }
};

int main()
{
    FullBinaryTree tree;
    tree.insert(1);
    tree.insert(2);
    tree.insert(3);
    tree.insert(4);
    return 0;
}